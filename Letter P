int border = 20;
void setup() {
  size (400,400);
  background (0);
}

void draw(){
  strokeWeight(1);
  stroke (255);

int i=border;
while (i<(width-border)) {
line(i, border, border, i);
i=i+10;
}

int j = width;
while (j > border + 10) {
  line(width-border,j-border, j-border, height-border);
  j = j-10;
  }
  
  fill(0);
  textSize(250);
text("P", 125, 300); 
}
